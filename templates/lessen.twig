{% extends '_snippets/_head.twig' %}

{% block content %}
<header class="header1 row" >
    <div class="tekst col-12 col-lg-7 col-xl-8">
        <h1>{{ entry.titelH1 }}</h1>
        {{ entry.inleidendeTekstHome }}
    </div>
    <div class="fotos col-12 col-lg-5 col-xl-4">
      {% set foto1 = entry.foto.one() %}
      {% set foto2 = entry.foto2.one() %}
            <img src="{{ foto1.url('horizontaal') }}" alt="{{ foto1.title }}">
            <img src="{{ foto2.url('verticaal') }}" alt="{{ foto2.title }}">
    </div>
</header>
<div class="row justify-content-end">
    {% set knop1 = entry.knop.one() %}
    <a class="col-6 col-md-3" href="{{ knop1.knopLinktNaar }}">
        <button>{{ knop1.title }}</button>
    </a>

    {% set knop2 = entry.knop2.one() %}
    <a class="col-6 col-md-3" href="{{ knop2.knopLinktNaar }}">
        <button>{{ knop2.title }}</button>
    </a>
</div>
<main class="mt-4">
    <h2>{{ entry.titelH2 }}</h2>
    <div class="brevetten">
        {% set brevetten = craft.entries.section('brevetten').all() %}
        {% for brevet in brevetten %}
            {% include '_snippets/_brevetten.twig' %}
        {% endfor %}
    </div>
</main>
{% endblock %}